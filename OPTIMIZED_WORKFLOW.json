    {
      "parameters": {
        "jsCode": "// Обработка Google Drive файлов для FantaProjekt API\nconst narration = $input.item.json.narration;\nconst files = $input.item.json.files;\n\n// Извлекаем первые 7-10 слов для верхнего текста\nconst words = narration.split(' ');\nconst topText = words.slice(0, 10).join(' ');\nconst bottomText = words.slice(-7).join(' ');\n\nreturn {\n  json: {\n    scenes: [{\n      text: narration,\n      media: {\n        type: \"files\",\n        files: files.map(f => ({\n          filename: f.name || f.filename || \"unknown.jpg\",\n          data: f.binary?.data || f.data || '',  // Binary data из Google Drive\n          mimeType: f.mimeType || \"image/jpeg\"\n        }))\n      },\n      textOverlays: [\n        {\n          text: topText,\n          position: {x: \"center\", y: \"top\"},\n          style: {\n            fontSize: 42,\n            fontFamily: \"Arial\",\n            color: \"#FFFFFF\",\n            backgroundColor: \"transparent\",\n            padding: 20,\n            opacity: 1.0\n          },\n          animation: \"fadeIn\",\n          timing: {start: 0, end: 3}\n        },\n        {\n          text: bottomText,\n          position: {x: \"center\", y: \"bottom\"},\n          style: {\n            fontSize: 38,\n            color: \"#FFFFFF\",\n            backgroundColor: \"#1E1E1E\",\n            padding: 15,\n            opacity: 0.9\n          },\n          animation: \"fadeIn\"\n        }\n      ]\n    }],\n    config: {\n      voice: \"am_onyx\",\n      music: \"dark\",\n      musicVolume: \"medium\",\n      orientation: \"portrait\",\n      captionPosition: \"center\",\n      captionBackgroundColor: \"#1E1E1E\",\n      paddingBack: 2000\n    }\n  }\n};"
      },
