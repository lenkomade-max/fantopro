{
  "test1_legacy_pexels": {
    "description": "Legacy format with searchTerms (backward compatibility)",
    "payload": {
      "scenes": [
        {
          "text": "Beautiful sunset over the ocean",
          "searchTerms": ["sunset", "ocean", "beach"]
        }
      ],
      "config": {
        "orientation": "portrait",
        "voice": "af_sarah",
        "musicVolume": "low"
      }
    }
  },
  "test2_new_pexels": {
    "description": "New format with Pexels media source",
    "payload": {
      "scenes": [
        {
          "text": "Amazing mountain landscapes",
          "media": {
            "type": "pexels",
            "searchTerms": ["mountain", "landscape", "nature"]
          }
        }
      ],
      "config": {
        "orientation": "portrait",
        "voice": "am_adam",
        "musicVolume": "medium"
      }
    }
  },
  "test3_url_source": {
    "description": "URL download source (using a public video URL)",
    "payload": {
      "scenes": [
        {
          "text": "This video was downloaded from a URL",
          "media": {
            "type": "url",
            "urls": [
              "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
            ]
          }
        }
      ],
      "config": {
        "orientation": "landscape",
        "voice": "af_bella",
        "musicVolume": "low"
      }
    }
  },
  "test4_mixed_sources": {
    "description": "Mixed sources - Pexels and URL in different scenes",
    "payload": {
      "scenes": [
        {
          "text": "First scene from Pexels",
          "media": {
            "type": "pexels",
            "searchTerms": ["city", "urban"]
          }
        },
        {
          "text": "Second scene from URL",
          "media": {
            "type": "url",
            "urls": [
              "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerBlazes.mp4"
            ]
          }
        }
      ],
      "config": {
        "orientation": "portrait",
        "voice": "af_nicole",
        "musicVolume": "medium"
      }
    }
  }
}

